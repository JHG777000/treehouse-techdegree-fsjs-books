include layout.pug
h1 New Book

include errors

form(method='post' action='/books/new')
  p
    label(for='title') Title
    input(id='title' name='title' type='text' value=book.title)
  p
    label(for='author') Author
    input(id='author' name='author' type='text' value=book.author)
  p
    label(for='genre') Genre
    input(id='genre' name='genre' type='text' value=book.genre)
  p
    label(for='year') Year
    input(id='year' name='year' type='text' value=book.year)
  p
    input(type='submit' value='Create New Book')
  p
    a.button(href='/') Cancel
